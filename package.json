{
  "name": "autoslap",
  "version": "0.1.0",
  "description": "Automatically installs ESLint, Prettier, lint-staged and Husky with basic config",
  "main": "index.js",
  "author": "Paweł Dąbrowski <dabrowskip9@gmail.com>",
  "license": "MIT",
  "bin": {
    "autoslap": "./index.js"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "start": "node index.js",
    "test": "jest",
    "test:dev": "jest --watchAll"
  },
  "dependencies": {
    "cross-spawn": "^6.0.5",
    "fs-extra": "^7.0.1",
    "jsonfile": "^5.0.0",
    "lodash.has": "^4.5.2",
    "please-upgrade-node": "^3.1.1",
    "update-notifier": "^2.5.0",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^2.2.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 10
    },
    "rules": {
      "no-console": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{css,scss,json,md,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  }
}
